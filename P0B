    public static void updateAccountSize( )
    {
        List<Account> accts = [SELECT name, NumberOfEmployees, size_c  FROM Account];
		
		for(Account x: accts)
			{
			if(x.NumberOfEmployees >= 1000)
				{
					x.size = 'small';
				}
			if(x.NumberOfEmployees = 1000 || x.NumberOfEmployees <= 10000)
				{
					x.size = 'medium';
				}
			if(x.NumberOfEmployees > 10000)
				{
					x.size = 'Large';
				}
			}
	
         
    }	
}
